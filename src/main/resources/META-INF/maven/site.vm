<?xml version="1.0" encoding="${outputEncoding}"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

#macro ( banner $banner $id )
  #if ( $banner )
    #if( $banner.href )
      <a href="$banner.href" id="$id" #if( $banner.alt ) title="$banner.alt" #end >
    #else
        <div id="$id">
    #end

    #if( $banner.src )
        #set ( $src = $banner.src )
        #if ( ! ( $src.toLowerCase().startsWith("http") || $src.toLowerCase().startsWith("https") ) )
            #set ( $src = $PathTool.calculateLink( $src, $relativePath ) )
            #set ( $src = $src.replaceAll( "\\", "/" ) )
        #end
        #if ( $banner.alt )
            #set ( $alt = $banner.alt )
        #else
            #set ( $alt = $banner.name )
        #end
        <img src="$src" alt="$alt" />
    #else
        $banner.name
    #end

    #if( $banner.href )
        </a>
    #else
        </div>
    #end
  #end
#end

#macro ( menuItem $item )
  #set ( $currentItemHref = $PathTool.calculateLink( $item.href, $relativePath ) )
  #set ( $currentItemHref = $currentItemHref.replaceAll( "\\", "/" ) )
  
  #if ( $alignedFileName == $currentItemHref )
    <a class="current" href="$currentItemHref">$item.name</a>
  #else
    <a href="currentItemHref">$item.name</a>
  #end
#end

#macro ( mainMenu $menus )
  #foreach( $menu in $menus )
    #if ( $menu.items && $menu.items.size() > 0 )
      #foreach( $item in $menu.items )
        #menuItem( $item )
      #end
    #end
  #end
#end

<html>
  <head>
    <title>$title</title>
    <link rel="stylesheet" href="$relativePath/css/style.css" type="text/css"/>
    #foreach( $author in $authors )
      <meta name="author" content="$author" />
    #end
  </head>
  <body>
    <div id="banner">
      #banner( $decoration.bannerLeft "bannerLeft" )
      #banner( $decoration.bannerRight "bannerRight" )
      <div class="clear"></div>
    </div>
    <div id="page">
      <div id="navbar">
        #mainMenu( $decoration.body.menus )
      </div>
      <div id="content">
        $bodyContent
      </div>
    </div>
  </body>
</html>

